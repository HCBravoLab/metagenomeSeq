citHeader("Please cite the top citation for the software itself and the paper for the original statistical method implemented in metagenomeSeq.")

citEntry(entry="article",
         title = "Robust statistical methods for differential abundance analysis of marker gene survey data",
         author = personList( as.person("Joseph N. Paulson"), 
                              as.person("Oscar Colin Stine"),
                              as.person("Hector Corrada Bravo"),
                              as.person("Mihai Pop")),
         year = 2013,
         journal = "In submission",
         volume = "",
         pages = "",
         doi = "",
         url = "",
         
         textVersion = 
         paste("JN Paulson, OC Stine, HC Bravo, M Pop:", 
               "Robust statistical methods for differential abundance analysis of marker gene survey data.",
                "In submission" ) )

citEntry(entry="manual",
         title = "metagenomeSeq: statistical analysis for sparse high-throughput sequncing",
         author = personList( as.person("Joseph N. Paulson"), 
                              as.person("Mihai Pop"),
                              as.person("Hector Corrada Bravo")),
         year = 2013,
         note = "Bioconductor package",
         url = "http://www.cbcb.umd.edu/software/metagenomeSeq",
         
         textVersion = 
         paste("JN Paulson, M Pop, HC Bravo:", 
               "metagenomeSeq: statistical analysis for sparse high-throughput sequncing",
                "Bioconductor package:", packageVersion("metagenomeSeq") ) )

